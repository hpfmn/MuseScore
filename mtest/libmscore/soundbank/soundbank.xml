           <assign program="1" />
   </sound> -->
       <options>
               <fixedVelocity value="127" />
               <dynamic type="expression" />
       </options>
       <MidiAction name="testaction">
           <!-- define normal midi actions here -->
           <program value="0" />
       </MidiAction>
   </SoundBank>
</SoundBanks>
